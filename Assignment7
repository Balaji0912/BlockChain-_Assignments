// 1)truncate the Sing 
let S="Icecream";
if(S.length<=4)
    console.log(S);
else{
    console.log(S.slice(0,4)+"...");
}

// 2)Remove spaced and join 
let S=“Hii Boy”;
console.log(S.replace(/ /g,""));

// 3)reverse String by words
let S="Hii Boy";
console.log(S.split(" ").reverse().join(" "));

// 4)replace 'a' with 'x'
let S="apple";
console.log(S.replace(/a/g, 'x'));

// 5)Method used to convert a string into array is 
ANS: split()

// 6)What string method can be used to check the occurrence of a specified
// text in a string?  
ANS:match()

// 7)Break string into new line
let S="hey you there?";
let arr=S.split(" ");
for(let val of arr){
   console.log(val)
}

// 8)check the frst char is lower or not
function Check(a){
    let regex=/^[a-z]/;
    if(regex.test(a))
        console.log("Yes, 1st char is lowercase");
    else
        console.log("No, 1st char is not lowercase");
}
Check("I'm an alien")
    
// 9) Checking string
let str="YeS";
let regex= new RegExp(/yes/gi);
console.log(regex.test(str)); 

// 10)String operations
// upper case code
let S="moMento" 
console.log(S.toUpperCase()); 

// first letter to uppercase
let S="moMento" 
console.log(S.charAt(0).toUpperCase()+S.slice(1)); 

// lowercase
let S="moMento" 
console.log(S.toLowerCase()); //lowercase

//string to swap between two half
let S="moMento" 
let s1=S.slice(0,S.length/2)
let s2=S.slice(S.length/2,S.length)
console.log(s2+s1);
